
<!--begin profile page-->
<main class="container">
  <div class="row">
    <!-- cover photo -->
    <div class="col-md-10 col-md-offset-1 col-xs-12" id="cover-photo">
      <img src="https://s3.amazonaws.com/viking_education/web_development/web_app_eng/hogwarts_small.jpg" class="img-responsive">
      <div class="row">
        <!--profile picture which is overlayed on cover photo-->
        <div class="col-md-6 col-md-offset-1 col-xs-10" id="profile-picture">
           <%= image_tag real_user.profile.profile_picture.url(:profile)  %>
          <h2><%= user_header_name(real_user_id) %></h2>
        </div>
      </div>
    </div>
    <!--set of profile tabs linking to different parts of the page-->
    <%= render "shared/nav_links" %>
  </div>

  <div class="row">
    <div class="col-md-10 col-md-offset-1" id="timeline-divider">
      <div class="row">
        <div class="col-md-4">
          <div class="row">
            <!--About panel -->
            <div class="col-xs-12 timeline-title">
              <h5>About</h5>
            </div>
            <div class="col-xs-12 timeline-content">
              <p><b>Born on:</b> <%= @timeline_user.profile.birthday.strftime("%m/%d/%Y") if @timeline_user.profile.birthday != nil %></p>
              <p><b>Went to school at:</b> <%= @timeline_user.profile.college %></p>
              <p><b>Hometown:</b> <%= @timeline_user.profile.hometown %></p>
              <p><b>Currently Lives:</b> <%= @timeline_user.profile.currently_lives %></p>
            </div>
            <!-- User's Photos -->
            <div class="col-xs-12 timeline-title" id="timeline-friends-photos">
              <h5>Photos (123)</h5>
            </div>
            <div class="col-xs-12 timeline-content">
              <div class="row">
                <div class="col-xs-4">
                  <a href=#><img src=https://s3.amazonaws.com/viking_education/web_development/web_app_eng/icon_photo_small.png class="img-responsive"></a>
                </div>
                <div class="col-xs-4">
                  <a href=#><img src=https://s3.amazonaws.com/viking_education/web_development/web_app_eng/icon_photo_small.png class="img-responsive"></a>
                </div>
                <div class="col-xs-4">
                  <a href=#><img src=https://s3.amazonaws.com/viking_education/web_development/web_app_eng/icon_photo_small.png class="img-responsive"></a>
                </div>
                <div class="col-xs-4">
                  <a href=#><img src=https://s3.amazonaws.com/viking_education/web_development/web_app_eng/icon_photo_small.png class="img-responsive"></a>
                </div>
                <div class="col-xs-4">
                  <a href=#><img src=https://s3.amazonaws.com/viking_education/web_development/web_app_eng/icon_photo_small.png class="img-responsive"></a>
                </div>
                <div class="col-xs-4">
                  <a href=#><img src=https://s3.amazonaws.com/viking_education/web_development/web_app_eng/icon_photo_small.png class="img-responsive"></a>
                </div>
                <div class="col-xs-4">
                  <a href=#><img src=https://s3.amazonaws.com/viking_education/web_development/web_app_eng/icon_photo_small.png class="img-responsive"></a>                    </div>
                <div class="col-xs-4">
                  <a href=#><img src=https://s3.amazonaws.com/viking_education/web_development/web_app_eng/icon_photo_small.png class="img-responsive"></a>
                </div>
                <div class="col-xs-4">
                  <a href=#><img src=https://s3.amazonaws.com/viking_education/web_development/web_app_eng/icon_photo_small.png class="img-responsive"></a>
                </div>
                <div class="col-xs-12">
                  <a href="photos.html"><h6>See more photos</h6></a>
                </div>
              </div>
            </div>
            <!-- User's Friends -->
            <div class="col-xs-12 timeline-title" id="timeline-friends-photos">
              <h5><%= "Friends (#{@timeline_user.friended_users.count})" %></h5>
            </div>
            <div class="col-xs-12 timeline-content">
              <div class="row">
                <% @timeline_user.friended_users[0..6].each do |friend| %>
                  <%= render partial: "shared/timeline_friends", locals: {user: friend} %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        <!--Post area and timeline -->
        <div class="col-md-8 col-sm-12 " id="timeline">
          <div class="row">
            <div class="col-md-11 col-md-offset-1">
              <div class="row">
              <!--Form to enter a new post-->
                <div class="col-xs-12 timeline-title">
                  <h5>New Posts</h5>
                </div>
                <%= simple_form_for @post do |post_fields| %>
                <div class ="col-xs-12" id="post-container">
                  <%= post_fields.input :body, input_html: {rows: "4"}, label: false, placeholder: "Tell the world something..." %>
                </div>
                <div class="col-xs-12" id="post-button-container">
                  <%= post_fields.submit "Post!", class:"btn btn-primary pull-right"%>
                </div>
                <% end %>
                <!-- Previous posts -->
                <% @timeline_user.posts_received.reverse.each do |post| %>
                  <%= render partial: "shared/post_box", locals: {post: post} %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
       
      </div>
    </div>
  </div>
  
</main>
