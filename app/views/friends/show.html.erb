
<main class="container">
  <div class="row">
    <!-- cover photo -->
    <div class="col-md-10 col-md-offset-1 col-xs-12" id="cover-photo">
      <img src="https://s3.amazonaws.com/viking_education/web_development/web_app_eng/hogwarts_small.jpg" class="img-responsive">
      <div class="row">
        <!--profile picture which is overlayed on cover photo-->
        <div class="col-md-6 col-md-offset-1 col-xs-10" id="profile-picture">
           <%= image_tag real_user.profile.profile_picture.url(:profile)  %>
          <h2><%= user_header_name(@user.id) %></h2>
        </div>
      </div>
    </div>
    <!--set of profile tabs linking to different parts of the page-->
    <%= render "shared/nav_links" %>
    </div>
  </div>

  <div class="row">
    <!--Friend page header -->
    <div class="col-md-10 col-md-offset-1 col-xs-12" id="header-bar">
      <h2>Friends</h2>
    </div>
    <!--list of friends-->
    <div class="col-md-10 col-md-offset-1 col-xs-12" id="basic">
      <div class="row">
        <% @friends[0..5].each do |friend| %>
          <%= render partial: "shared/friend_page", locals: {user: friend} %>
        <% end %>
      </div>
    </div>
  </div>
  
</main>
