<div class="col-xs-12" id="previous-post-container">
  <div class="row">
    <div class="col-xs-12" id="author-info">
      <a href=#authorprofile><img src=https://s3.amazonaws.com/viking_education/web_development/web_app_eng/icon_photo_small.png class="img-responsive"></a>
      <h6><%= link_to user_header_name(post.post_author_id), user_path(@timeline_user) %>
      <br>Posted on <%= post.created_at.strftime("%m/%d/%Y") %></h6>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12" id="post-content">
      <p><%= post.body %></p>
    </div>
  </div>
  <div class="row" id="post-feedback">
    <div class="col-xs-1">
      <h6><%= link_to "Like", post_likes_path(post.id), method: 'post' %></h6>
    </div>
    <div class="col-xs-2 col-xs-offset-8">
      <% if post.post_author_id == current_user.id %>
      <h6><%= link_to "Delete Post", post_path(post), method: :delete %></h6>
      <% end %>
    </div>
  </div>
</div>