<div class="col-xs-12" id="previous-post-container">
  <div class="row">
    <div class="col-xs-12" id="author-info">
      <a href=#authorprofile><img src=https://s3.amazonaws.com/viking_education/web_development/web_app_eng/icon_photo_small.png class="img-responsive"></a>
      <h6><%= link_to user_header_name(post.post_author_id), user_path(post.post_author_id) %>
      <br>Posted on <%= post.created_at.strftime("%m/%d/%Y") %></h6>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12" id="post-content">
      <p><%= post.body %></p>
    </div>
  </div>
  <div class="row" id="post-feedback">
    <div class="col-xs-1">
      <% if current_user.likes_post?(post.id, "Post").empty? %>
        <h6><%= link_to "Like", post_likes_path(post.id), method: 'post' %></h6>
      <% else %>
        <h6><%= link_to "Unlike", post_like_path(post.id, current_user.likes_post?(post.id, "Post").first.id), method: 'delete' %></h6>
      <% end %>
    </div>
    <div class="col-xs-2 col-xs-offset-8">
      <% if post.post_author_id == current_user.id %>
      <h6><%= link_to "Delete Post", post_path(post), method: :delete %></h6>
      <% end %>
    </div>
  </div>
  <div class="row" id="comments-section">
    <% post.comments.each do |comment| %>
      <%= render partial: "shared/comment_box", locals: {comment: comment} %>
    <% end %>
    <div class="col-xs-12" id="write-comment">
      <%= form_for [post] do |post_field| %>
        <%= post_field.simple_fields_for Comment.new do |comment_field| %>
          <%= comment_field.input :body, class:"form-control", label: false, input_html: {rows: "1"}, placeholder: "Write a comment..." %>
        <% end %>
        <div class="col-xs-2 col-xs-offset-8">
        <%= post_field.submit "Post comment", class:"btn btn-primary btn-sm" %>
        </div>
      <% end %>
    </div>
  </div>
</div>